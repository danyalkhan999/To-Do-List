<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App </title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/19f8368dd2.js" crossorigin="anonymous"></script>
</head>
<body>
     <!-- nav -->
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">ToDo App</a>
        </div>
      </nav>

       <!-- body -->
      <div class="container mt-5">
        <form action="/create-task" method="post">
            <table class="table">
                <thead class="bg-info-subtle text-light">
                    <tr class="table-active t-center
                    ">
                        <th class="c-stg">Add Task</th>
                        <th class="c-stg">Category</th>
                        <th class="c-stg">Date</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>
                            <input type="text" name="description"
                        placeholder="Enter a ToDo..." class="form-control w-90" required>
                        </td>
                        <td>
                            <select name="category" class="form-select" aria-label="Default select example">
                                <option selected>Select a Category</option>
                                <option >Personal</option>
                                <option >Work</option>
                                <option >School</option>
                                <option >Cleaning</option>
                                <option >Other</option>
                              </select>
                        </td>
                        <td>
                            <input type="date" name="date" class="form-control" required>
                        </td>
                        <td class="d-flex justify-content-center">
                            <input type="submit" value="Add ToDo" class="btn btn-primary ">
                        </td>
                    </tr>
                </tbody>

            </table>
        </form>

        <div class="container mt-5">
            <h1 class="display-6 text-center">ToDo List</h1>

            <!-- delete tasks form -->
            <form action="/delete-task" method="get">
                <table class="table">
                    <thead class="bg-danger bg-gradient t-center text-light">
                        <tr>
                            <th>Select</th>
                            <th>Task</th>
                            <th>Category</th>
                            <th>Due Date</th>
                        </tr>
                    </thead>
                    <% for(let i of task) { %> 
                    <tbody class="t-center ">
                        <tr>
                            <td>
                                <input type="checkbox" name= <%= i._id %> >
                            </td>
                            <td>
                                <p> <%= i.description %>  </p>
                            </td>
                            <td>
                                <p> <%= i.category %>  </p>
                            </td>
                            <td>
                                <p><i class="fa-regular fa-calendar-days"></i> <%= i.date.toLocaleDateString("en-US") %>  </p>
                            </td>
                        </tr>
                    </tbody>
                    <% } %> 
                </table>
                <div class="d-flex justify-content-center ">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg">
                </div>
            </form>
        </div>
      </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>